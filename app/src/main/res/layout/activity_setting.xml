<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_modern"
    tools:context=".SettingActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:elevation="0dp"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="0dp"
            app:elevation="0dp"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <!-- API 설정 섹션 -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/surface_modern"
                app:cardUseCompatPadding="false"
                app:cardPreventCornerOverlap="false"
                android:background="@drawable/cardview_border_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="API 설정"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_modern"
                        android:layout_marginBottom="8dp" />

                    <!-- API Key -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="API Key"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary_modern"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/editTextApiKey"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/edit_text_modern_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary_modern"
                            android:hint="API Key를 입력하세요"
                            android:inputType="text"
                            android:maxLines="1" />

                    </LinearLayout>

                    <!-- API Secret -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="API Secret"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary_modern"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/editTextApiSecret"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/edit_text_modern_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary_modern"
                            android:hint="API Secret를 입력하세요"
                            android:inputType="text"
                            android:maxLines="1" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- 거래 설정 섹션 -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/surface_modern"
                app:cardUseCompatPadding="false"
                app:cardPreventCornerOverlap="false"
                android:background="@drawable/cardview_border_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="거래 설정"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_modern"
                        android:layout_marginBottom="8dp" />

                    <!-- 1회 거래 금액 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1회 거래 금액"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary_modern"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/editTextUnitPrice"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/edit_text_modern_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary_modern"
                            android:hint="거래 금액을 입력하세요 (원)"
                            android:inputType="number"
                            android:maxLines="1" />

                    </LinearLayout>

                    <!-- 거래 주기 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="거래 주기"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary_modern"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/editTextTradingInterval"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/edit_text_modern_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary_modern"
                            android:hint="거래 주기를 입력하세요 (초)"
                            android:inputType="number"
                            android:maxLines="1" />

                    </LinearLayout>

                    <!-- 매수 당 수익 목표 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="매수 당 수익 목표"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary_modern"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/editTextEarningRate"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/edit_text_modern_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary_modern"
                            android:hint="수익 목표를 입력하세요 (%)"
                            android:inputType="numberDecimal"
                            android:maxLines="1" />

                    </LinearLayout>

                    <!-- 거래 간격 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="거래 간격"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary_modern"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/editTextSlotIntervalRate"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/edit_text_modern_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary_modern"
                            android:hint="거래 간격을 입력하세요 (%)"
                            android:inputType="numberDecimal"
                            android:maxLines="1" />

                    </LinearLayout>

                    <!-- 코인 타입 선택 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="코인 타입"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary_modern"
                            android:layout_marginBottom="8dp" />

                        <RadioGroup
                            android:id="@+id/radioGroupCoinType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radioButtonBTC"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BTC"
                                android:textSize="14sp"
                                android:textColor="@color/text_primary_modern"
                                android:layout_marginEnd="24dp"
                                android:checked="true" />

                            <RadioButton
                                android:id="@+id/radioButtonETH"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ETH"
                                android:textSize="14sp"
                                android:textColor="@color/text_primary_modern" />

                        </RadioGroup>

                    </LinearLayout>

                    <!-- 자동 스크롤 설정 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/checkBoxAutoScroll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="자동 스크롤"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary_modern"
                            android:checked="true"
                            style="@style/CheckBoxModern" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- 저장 버튼 -->
            <Button
                android:id="@+id/buttonSave"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:text="설정 저장"
                android:textSize="14sp"
                android:textStyle="bold"
                style="@style/ButtonModernPrimary" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>