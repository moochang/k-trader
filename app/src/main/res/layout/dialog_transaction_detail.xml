<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <!-- 거래 시간 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="거래 시간"
                android:textColor="#666666"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDetailTransactionTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-12-25 15:30:00"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- BTC 현재 가격 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BTC 현재 가격"
                android:textColor="#666666"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDetailBtcCurrentPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="95,000,000 KRW"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- 시간당 변동률 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="시간당 변동률"
                android:textColor="#666666"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDetailHourlyChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2.5%"
                android:textColor="#44FF44"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- 예상 잔고 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="예상 잔고"
                android:textColor="#666666"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDetailEstimatedBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0015 BTC"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- 마지막 매수 가격 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="마지막 매수 가격"
                android:textColor="#666666"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDetailLastBuyPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="94,500,000 KRW"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- 마지막 매도 가격 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="마지막 매도 가격"
                android:textColor="#666666"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDetailLastSellPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="95,500,000 KRW"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- 다음 매수 가격 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="다음 매수 가격"
                android:textColor="#666666"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDetailNextBuyPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="94,000,000 KRW"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
