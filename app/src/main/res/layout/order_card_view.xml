<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/surface_modern">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 주문 ID -->
        <TextView
            android:id="@+id/textOrderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/order_id"
            android:textColor="@color/text_primary_modern"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- 주문 타입과 상태 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/textOrderType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/order_type"
                android:textColor="@color/text_primary_modern"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_status"
                android:textColor="@color/text_secondary_modern"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- 수량과 가격 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/textUnits"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/order_units"
                android:textColor="@color/text_primary_modern"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_price"
                android:textColor="@color/text_primary_modern"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 주문 시간 -->
        <TextView
            android:id="@+id/textPlacedTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/order_placed_time"
            android:textColor="@color/text_secondary_modern"
            android:textSize="11sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>
