<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_modern">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:checked="true"
                android:drawableStart="@drawable/ic_play"
                android:drawablePadding="8dp"
                android:text="@string/start_trading"
                android:textAllCaps="false"
                style="@style/ButtonModernSuccess" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:drawableStart="@drawable/ic_stop"
                android:drawablePadding="8dp"
                android:text="@string/stop_trading"
                android:textAllCaps="false"
                style="@style/ButtonModernError" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:drawableStart="@drawable/ic_scroll_down"
                android:drawablePadding="8dp"
                android:text="@string/scroll_to_bottom"
                android:textAllCaps="false"
                style="@style/ButtonModernSecondary" />

            <!-- Settings 버튼은 App bar 메뉴로 이동 -->
        </LinearLayout>

        <!-- Auto scroll 기능은 Settings로 이동했으므로 이 섹션 제거 -->

        <!-- TabLayout과 ViewPager -->
        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/background_modern"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/primary_modern"
            app:tabSelectedTextColor="@color/primary_modern"
            app:tabTextColor="@color/text_secondary_modern" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>