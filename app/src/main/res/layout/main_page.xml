<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_modern">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:checked="true"
                android:drawableStart="@drawable/ic_play"
                android:drawablePadding="6dp"
                android:text="@string/start_trading"
                android:textAllCaps="false"
                android:textSize="12sp"
                style="@style/ButtonModernSuccess" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:drawableStart="@drawable/ic_stop"
                android:drawablePadding="6dp"
                android:text="@string/stop_trading"
                android:textAllCaps="false"
                android:textSize="12sp"
                style="@style/ButtonModernError" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:drawableStart="@drawable/ic_scroll_down"
                android:drawablePadding="6dp"
                android:text="@string/scroll_to_bottom"
                android:textAllCaps="false"
                android:textSize="12sp"
                style="@style/ButtonModernSecondary" />

            <!-- Settings 버튼은 App bar 메뉴로 이동 -->
        </LinearLayout>

        <!-- 코인 정보 섹션 -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface_modern">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <!-- 코인 타입 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textCoinType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BTC"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_modern" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="코인 타입"
                        android:textSize="10sp"
                        android:textColor="@color/text_secondary_modern" />

                </LinearLayout>

                <!-- 현재 가격 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textCurrentPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₩0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_modern" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="현재 가격"
                        android:textSize="10sp"
                        android:textColor="@color/text_secondary_modern" />

                </LinearLayout>

                <!-- 등락 퍼센트 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textPriceChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+0.00%"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/success_modern" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="등락률"
                        android:textSize="10sp"
                        android:textColor="@color/text_secondary_modern" />

                </LinearLayout>

                <!-- 거래 갯수 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textActiveOrders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary_modern" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="활성 거래"
                        android:textSize="10sp"
                        android:textColor="@color/text_secondary_modern" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- TabLayout과 ViewPager -->
        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/background_modern"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/primary_modern"
            app:tabSelectedTextColor="@color/primary_modern"
            app:tabTextColor="@color/text_secondary_modern" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>