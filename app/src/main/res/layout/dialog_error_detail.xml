<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <!-- 에러 시간 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="에러 발생 시간"
                android:textColor="#666666"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDetailErrorTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-12-25 15:30:00"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- 에러 타입 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="에러 타입"
                android:textColor="#666666"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDetailErrorType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Network Error"
                android:textColor="#FF4444"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 에러 메시지 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="에러 메시지"
                android:textColor="#666666"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textDetailErrorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="서버 연결에 실패했습니다."
                android:textColor="#000000"
                android:textSize="14sp"
                android:background="#FFF5F5"
                android:padding="8dp" />

        </LinearLayout>

        <!-- 서버 API 상세 에러 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="서버 API 상세 에러"
                android:textColor="#666666"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textDetailApiError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="API 호출 실패: HTTP 500 Internal Server Error"
                android:textColor="#000000"
                android:textSize="12sp"
                android:background="#F0F8FF"
                android:padding="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
