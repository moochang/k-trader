<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF"
    android:elevation="8dp">

    <!-- 권한 요청 아이콘 -->
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_storage"
        android:contentDescription="저장소 권한 아이콘" />

    <!-- 제목 -->
    <TextView
        android:id="@+id/textPermissionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그 저장 권한 필요"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- 메시지 -->
    <TextView
        android:id="@+id/textPermissionMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="앱의 로그를 저장하기 위해 외부 저장소 접근 권한이 필요합니다."
        android:textColor="#666666"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="24dp" />

    <!-- 권한 설명 카드 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F8F9FA"
        android:padding="16dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이 권한을 통해 다음 기능을 사용할 수 있습니다:"
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 거래 로그 저장\n• 에러 로그 기록\n• 앱 사용 통계"
            android:textColor="#666666"
            android:textSize="13sp"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

    <!-- 버튼 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- 거부 버튼 (좌측) -->
        <Button
            android:id="@+id/btnDeny"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="거부"
            android:textColor="#666666"
            android:textSize="14sp"
            android:background="@drawable/button_secondary_background"
            android:elevation="0dp" />

        <!-- 권한 허용 버튼 (우측) -->
        <Button
            android:id="@+id/btnAllow"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="권한 허용"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/button_primary_background"
            android:elevation="0dp" />

    </LinearLayout>

</LinearLayout>
