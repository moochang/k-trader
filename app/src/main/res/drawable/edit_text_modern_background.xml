<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 포커스 상태 -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_modern" />
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="@color/primary_modern" />
        </shape>
    </item>
    
    <!-- 기본 상태 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_modern" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/neutral_modern" />
        </shape>
    </item>
</selector>
