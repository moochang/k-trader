<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 눌린 상태 (우선순위 높음) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_modern" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="@color/primary_dark_modern" />
        </shape>
    </item>
    
    <!-- 포커스 상태 -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_light_modern" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="@color/primary_modern" />
        </shape>
    </item>
    
    <!-- 기본 상태 -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_modern" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="@color/primary_modern" />
        </shape>
    </item>
    
    <!-- 비활성 상태 -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_modern" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="@color/neutral_modern" />
        </shape>
    </item>
</selector>
